# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# Database Configuration (Neon/Vercel Postgres)
DATABASE_URL=postgresql://user:password@host/database
POSTGRES_URL=postgresql://user:password@host/database?sslmode=require
POSTGRES_PRISMA_URL=postgresql://user:password@host/database?sslmode=require&pgbouncer=true
POSTGRES_URL_NO_SSL=postgresql://user:password@host/database
POSTGRES_URL_NON_POOLING=postgresql://user:password@host/database?sslmode=require
POSTGRES_USER=your_db_user
POSTGRES_HOST=your_host.neon.tech
POSTGRES_PASSWORD=your_db_password
POSTGRES_DATABASE=your_database_name

# Vercel Configuration
VERCEL_ENV=development
VERCEL_URL=your-project.vercel.app
VERCEL_PROJECT_ID=your_project_id
VERCEL_ORG_ID=your_org_id
VERCEL_OIDC_TOKEN=your_oidc_token_here
